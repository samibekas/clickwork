
  <div class="container">
    <div class="form-wrapper" style="width: 400px; margin: 0 auto;">
      <h2>Book a desk</h2>
       <%= simple_form_for [@office, @booking], method: "post" do |f| %>
        <%= f.input :start_at, as: :string, required: false, input_html: {class: "datepicker"} %>
        <%= f.input :end_at, as: :string, required: false, input_html: {class: "datepicker"} %>
        <%= f.input :number_of_desks, as: :fake %>
        <%= f.button :submit, "Book", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>

