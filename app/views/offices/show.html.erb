<div style="background-image:url(<%= @office.photo.url %>); height: 50vh; width: 100%; background-size: cover;  background-attachment: fixed;
  background-position: center;
  background-repeat: no-repeat;">
</div>


<div class="container">

  <div class="important-info">
    <div class="primiry-info">
      <div class="title">
        <h1><%= @office.name %></h1>
        <p><%= @office.address %></p>
      </div>
      <div class="facilities">
        <% @office.facilities.each do |facility| %>
          <p><%= facility.name %></p>
        <% end %>
      </div>
      <div class="host-info text-center">
        <%= cl_image_tag @office.user.photo, class: "img-circle", :width => 60, :height => 60 %>
        <p><%= @office.user.first_name %></p>
      </div>
    </div>

    <div class="secondary-info">
      <h4>DESCRIPTION:</h4>
      <p><%= @office.description %></p>
    </div>

    <div class="fixed">
      <div class="book">
        <ul class="list-inline">
          <li><p><span><strong><%= @office.capacity_max%></span></strong> seats capacity</p></li>
          <li><p><span><strong><%= @office.price %>â‚¬</span></strong> per desk</p></li>
        </ul>
        <hr>

        <div id="book-form" data-dates='<%= @notavailable.to_json %>'>
          <%= simple_form_for [@office, @booking] do |f| %>
            <%= f.input :dates, as: :string, required: true, input_html: {class: "datepicker"} %>
            <%= f.submit "Book a desk", class: "btn", id: "btn-submit-date" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>

 <%#= render 'shared/flatpickr' %>

  <div class="reviews">
    <hr>
    <% if @reviews.nil? %>
      <p><strong>Be the first one to give a comment </strong></p>
      <% else %>

      <p><strong><%= @reviews.count %> comments </strong></p>
        <% @office.reviews.average(:rating).to_i.times do %>
              <i class="fas fa-star"></i>
                <% end %>
            <% (5 - @office.reviews.average(:rating).to_i).times do %>
              <i class="far fa-star"></i>
            <% end %>
          </p>
   <% end %>


    <hr>
    <div class="comments">
      <% if @reviews.nil? %>
        <p>No reviews Yet</p>
      <% else %>
          <ul class="list-inline">
            <% @reviews.each do |review| %>
            <div class="comment">
                <li>
                  <div class="commenter-info">
                    <div class="commenter-avatar">
                      <%= cl_image_tag review.user.photo, class: "img-circle", :width => 60, :height => 60 %>
                    </div>
                    <div class="commenter-name">
                      <p><%= review.user.first_name %></p>
                      <div class="comment-date">
                        <p><%= review.created_at.strftime("%B") %> <%= review.created_at.year %></p>
                      </div>
                    </div>
                  </div>
                  <div class="comment-content">
                    <p><%= review.comment %></p>
                    <% review.rating.times do %>
                       <i class="fas fa-star"></i>
                    <% end %>
                  </div>
                </li>
                <hr>
              <% end %>
            </div>
          </ul>
      <% end %>
      <div class="form-comment">
        <%= simple_form_for [@office, @review] do |f| %>
          <%= f.input :comment %>
          <div style="padding-bottom: 1.5em;">
            <p style="font-size: 14px; color: #747474; font-weight: bold;">Reviews</p>
            <span class="rating">
              <%= f.collection_radio_buttons :rating, [[5], [4], [3], [2], [1]], :first, :last, item_wrapper_tag: false, boolean_style: :inline do |b| %>
                <%= b.radio_button + b.label {''} %>
              <% end %>
            </span>
          </div>
          <%= f.submit "Add a review", class: "btn" %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div
  id="map"
  style="width: 100%;
  height: 300px;"
  data-markers="<%= @markers.to_json %>"
></div>



