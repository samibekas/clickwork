<h1><%= @office.name %></h1>

<%= cl_image_tag @office.photo, width: 400, height: 300, crop: :fill %>

<h2>Chez <%= @office.user.first_name %></h2>
<h4> Description: </h4>
<p><%= @office.description %></p>

<h4> Address: </h4>
<p><%= @office.address %></p>

<h4> Number of desks: </h4>
<p><%= @office.capacity_max %></p>

<h4> Daily price per desk: </h4>
<p><%= @office.desks.first.price %> â‚¬</p>

<%= link_to "Back to list", offices_path %>

<%= simple_form_for [@office, @review] do |f| %>
  <%= f.input :comment %>
  <%= f.input :rating %>
  <%= f.submit "Add a review", class: "btn btn-primary" %>
<% end %>


<% if @reviews.nil? %>
  <p>No reviews Yet</p>
<% else %>
  <ul>
    <% @reviews.each do |review| %>
      <li>
        <%= review.created_at %>
        <%= review.comment %>
        <%= review.rating %>
        <%= review.user.first_name %> <%= review.user.last_name %>
      </li>
    <% end %>
  </ul>
<% end %>
