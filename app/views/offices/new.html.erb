<%= simple_form_for @office do |f| %>
  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :address %>
  <%= f.input :capacity_max %>
  <%= f.input :photo %>
  <%= f.association :facilities, as: :check_boxes, include_blank: false, include_hidden: false %>
  <%= f.input :price_per_desk, as: :fake %>
  <%= f.input :photo_cache, as: :hidden %>
  <%= f.submit "add an office", class: "btn btn-primary" %>
<% end %>


